/* Various utility scripts, go in here. */

script "Utility iScript";

alias showt
{
   echo "Args 2-4: '" + args(2,4) + "'";
   echo "Args 0-1: '" + args(0,1) + "'";
   echo "Args 1-0: '" + args(1,0) + "'";
   echo "Args 0-0: '" + args(0,0) + "'";
   echo "Args 2-1: '" + args(2,1) + "'";
   show_prompt;
}

alias sett
{
   global target;
   target = arg "1";
   echo "Target1: " + target;
   if ( !target )
     target = "really none";
   echo "Target: " + target;
   show_prompt;
}


/* Pets, and everything about pets. */

// From INFO HERE.
trigger regex "^\"[a-zA-Z]+(\\d+)\" +a fluffy jambaali$" { pet_nr = arg "1"; }

// From PETLIST.
trigger "Your Pets in the Land" { pet_list = "yes"; }
trigger prompt * { if ( pet_list ) { pet_list = ""; pet_nr = ""; } }
trigger regex "^(\\d+) +[^*]+$" { if ( pet_list ) { pet_list = ""; pet_nr = arg "1"; } }

alias pet
{
   local cmd = arg 1;
   
   echo "arg0: " + arg 0;
   echo "arg1: " + arg 1;
   echo "arg2: " + arg 2;
   echo "arg3: " + arg 3;
   
   if ( !pet_nr )
     {
	echo "Umm... I don't know of any pets yet, type PETLIST.";
	show_prompt( );
	return;
     }
   
   if ( cmd == "show" )
     {
	echo "Current pet: " + pet_nr;
     }
   else if ( cmd == "train" )
     {
	send "train " + pet_nr + " " + arg 2 + arg 3 + arg 4;
	return;
     }
   else if ( cmd == "skills" )
     {
	send "petskills " + pet_nr;
	return;
     }
   else if ( cmd == "con" || cmd == "consider" )
     {
	send "petconsider " + pet_nr;
	return;
     }
   else if ( cmd == "help" || !cmd )
     {
	echo "Possible commands:";
	echo "  show, train, skills, con, help, <order>";
     }
   else
     {
	send "order " + pet_nr + arg 1 + arg 2 + arg 3 + arg 4;
	echo "- order " + pet_nr + arg 1 + arg 2 + arg 3 + arg 4;
	return;
     }
   
   show_prompt( );
}




/* Key Ring. */

function get_key( name )
{
   if ( ( name == "bedroom" ) or ( name == "2" ) )
     return "key104250";

   if ( ( name == "house" ) or ( name == "1" ) )
     return "key102502";
   
   return;
}


function opposite_of( dir )
{ 
   if ( ( dir == "n" ) or ( dir == "north" ) )
     return "s";
   if ( ( dir == "ne" ) or ( dir == "northeast" ) )
     return "sw";
   if ( ( dir == "e" ) or ( dir == "east" ) )
     return "w";
   if ( ( dir == "se" ) or ( dir == "southeast" ) )
     return "nw";
   if ( ( dir == "s" ) or ( dir == "south" ) )
     return "n";
   if ( ( dir == "sw" ) or ( dir == "southwest" ) )
     return "ne";
   if ( ( dir == "w" ) or ( dir == "west" ) )
     return "e";
   if ( ( dir == "nw" ) or ( dir == "northwest" ) )
     return "se";
   if ( ( dir == "u" ) or ( dir == "up" ) )
     return "d";
   if ( ( dir == "d" ) or ( dir == "down" ) )
     return "u";
   if ( ( dir == "in" ) )
     return "out";
   if ( ( dir == "out" ) )
     return "in";
   
   echo "Warning: Unknown direction '" + dir + "'.";
   
   return;
}


