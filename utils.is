alias key
{
   local keyname = get_key( arg "1" );
   local dir = arg "2";
   local opp = opposite_of( dir );
   local reason;
   
   if ( !keyname || !opp )
     {
	if ( !keyname && !opp )
	  reason = "What key and what direction?";
	else if ( !keyname )
	  reason = "What key?";
	else if ( !opp )
	  reason = "What direction?";
	else
	  reason = "Impossible error.";
	
	echo "Huh? " + reason;
	show_prompt;
	return;
     }
   
   send "get " + keyname + " from pouch";
   send "unlock door " + dir;
   send "open door " + dir;
   send dir;
   send "close door " + opp;
   send "lock door " + opp;
   send "put " + keyname + " in pouch";
}

